.layout--slider
  margin-bottom 48px
  .glide
    position relative
    ul
    li
      margin 0
    &__slide
      position relative
      height 50vw
      max-height calc(100vh - 132px)
      img
        width 100%
        height 100%
        object-fit cover

    &__arrows
      position absolute
      bottom 0
      left 0
      margin 0 -6px
      
      button
        font-size 22px
        font-weight 700
        letter-spacing 1px
        padding 12px
        background-color: transparent
        color: white
        text-transform uppercase
        border: 4px solid white
        margin 0 6px
        cursor pointer
        transition all 200ms
        &:hover
          background-color white
          color: $colors.green
          border: 4px solid white

        svg
          width 36px
          height 24px

        +break(desktop)
          padding 12px

    &__arrow--left
      transform rotate(-180deg)

    &__bullets
      position absolute
      bottom 12px
      width 100%
      display flex
      justify-content center

    &__bullet
      display block
      width 10px
      height 10px
      padding 0
      border-radius 50%
      border none
      background-color: $colors.honey_dew
      margin 0 8px
      opacity 0.5
      cursor pointer
      transition opacity 250ms
    
    &__bullet--active,
    &__bullet:hover
      background-color: $colors.green
      opacity 1
  
  .slide-content
    position absolute
    top 48px
    left 24px

    &__headline
      font-size 60px
      font-weight bold
      letter-spacing 4px
      margin: 0 0 12px
      line-height 1
    
    &__text
      font-size 24px
      margin 0