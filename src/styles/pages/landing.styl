.landing-hero
  position relative
  height 100vh

  &:after


  &__image
    width 100%
    height 100%
    object-fit cover

  &__content
    position absolute
    top 50%
    right 10%
    width 500px
    color: $colors.light
    transform translateY(-50%)

    .mega
      margin-top 0
      margin-bottom 12px
